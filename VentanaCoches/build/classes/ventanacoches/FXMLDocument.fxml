<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.Image?>


<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="ventanacoches.FXMLDocumentController">
    <!-- Barra Superior -->
    <top>
        <HBox spacing="20"  alignment="CENTER" style="-fx-background-color: #5b1e1e; -fx-padding: 10;">
            <Button text="HOME" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
            <Button text="SOLICITAR MANTENIMIENTO" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
            <Button text="CERRAR SESIÓN" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- Panel Izquierdo -->
    <left>
        <VBox spacing="10" style="-fx-background-color: #2e1a1a; -fx-padding: 20; -fx-border-color: #004fff; -fx-border-width: 2; -fx-border-radius: 5;">
            <ImageView fitHeight="50" fitWidth="50">
                <image>
                    
                </image>
            </ImageView> 

            <Button text="Opción 1" prefWidth="150" />
            <Button text="Opción 2" prefWidth="150" />
            <Button text="Opción 3" prefWidth="150" />
            <Button text="Opción 4" prefWidth="150" />
            <Button text="Opción 5" prefWidth="150" />
            <Button text="Opción 6" prefWidth="150" />
        </VBox>
    </left>

    <!-- Área Central -->
    <center>
        <VBox spacing="10" style="-fx-padding: 20;">
            <!-- Barra de búsqueda -->
            <TextField promptText="Buscar..." style="-fx-background-color: #fff; -fx-border-color: #888;" />
            <!-- Grid de elementos -->
            <GridPane hgap="20" vgap="20">
                <children>
                    <!-- Genera botones en la grilla -->
                    <Button text="" GridPane.columnIndex="0" GridPane.rowIndex="0" prefWidth="100" prefHeight="80" />
                    <Button text="" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="100" prefHeight="80" />
                    <Button text="" GridPane.columnIndex="2" GridPane.rowIndex="0" prefWidth="100" prefHeight="80" />
                    <Button text="" GridPane.columnIndex="3" GridPane.rowIndex="0" prefWidth="100" prefHeight="80" />
                    <Button text="" GridPane.columnIndex="4" GridPane.rowIndex="0" prefWidth="100" prefHeight="80" />
                    <Button text="" GridPane.columnIndex="0" GridPane.rowIndex="1" prefWidth="100" prefHeight="80" />
                    <Button text="" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="100" prefHeight="80" />
                    <Button text="" GridPane.columnIndex="2" GridPane.rowIndex="1" prefWidth="100" prefHeight="80" />
                    <Button text="" GridPane.columnIndex="3" GridPane.rowIndex="1" prefWidth="100" prefHeight="80" />
                </children>
            </GridPane>
        </VBox>
    </center>
</BorderPane>
