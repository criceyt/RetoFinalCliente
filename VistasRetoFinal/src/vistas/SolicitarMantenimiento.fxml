<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controladores.SolicitarMantenimientoController">
    <top>
        <HBox alignment="CENTER" spacing="20" style="-fx-background-color: #5b1e1e; -fx-padding: 10;">
            <Button fx:id="homeBtn" style="-fx-text-fill: white; -fx-font-weight: bold;" text="HOME" />
            <Button fx:id="solicitarMantenimientoBtn" style="-fx-text-fill: white; -fx-font-weight: bold;" text="SOLICITAR MANTENIMIENTO" />
            <MenuButton style="-fx-text-fill: white; -fx-font-weight: bold; -fx-background-color: #d32f2f;" text="Gestionar">
                <items>
                    <MenuItem fx:id="gestionVehiculos" text="Gestión de Vehículos" />
                    <MenuItem fx:id="gestionProveedores" text="Gestión de Proveedores" />
                    <MenuItem fx:id="gestionMantenimientos" text="Gestión de Mantenimientos" />
                </items>
            </MenuButton>
            <Button fx:id="cerrarSesionBtn" style="-fx-text-fill: white; -fx-font-weight: bold;" text="CERRAR SESIÓN" />
        </HBox>
    </top>
    <center>
        <HBox alignment="CENTER" spacing="20" style="-fx-padding: 10;">
        
            <!-- Columna de Vehículo (Izquierda) -->
            <VBox alignment="CENTER" spacing="8" style="-fx-padding: 10;">
                <!-- Botón Título VEHÍCULO -->
                <Button disable="true" prefWidth="130.0" style="-fx-font-size: 12px; -fx-background-color: #d32f2f; -fx-text-fill: white;" text="VEHÍCULO" />
            
                <Label style="-fx-font-size: 14px;" text="Matrícula:" />
                <TextField fx:id="matriculaField" prefHeight="30.0" prefWidth="220.0" style="-fx-font-size: 12px;" />
            
                <Label style="-fx-font-size: 14px;" text="Marca:" />
                <TextField fx:id="marcaField" prefHeight="30.0" prefWidth="220.0" style="-fx-font-size: 12px;" />
            
                <Label style="-fx-font-size: 14px;" text="Modelo:" />
                <TextField fx:id="modeloField" prefHeight="30.0" prefWidth="220.0" style="-fx-font-size: 12px;" />
            
                <Label style="-fx-font-size: 14px;" text="Descripción:" />
                <TextField fx:id="descripcionField" prefHeight="30.0" prefWidth="220.0" style="-fx-font-size: 12px;" />
            </VBox>
        
            <!-- Columna de Cliente (Derecha) -->
            <VBox alignment="CENTER" spacing="8" style="-fx-padding: 10;">
                <!-- Botón Título CLIENTE, ahora arriba -->
                <Button disable="true" prefWidth="130.0" style="-fx-font-size: 12px; -fx-background-color: #d32f2f; -fx-text-fill: white;" text="CLIENTE" translateY="-45.0" />
            
                <Label style="-fx-font-size: 14px;" text="DNI:" />
                <TextField fx:id="dniField" prefHeight="30.0" prefWidth="220.0" style="-fx-font-size: 12px;" />
            
                <Label style="-fx-font-size: 14px;" text="Email:" />
                <TextField fx:id="emailField" prefHeight="30.0" prefWidth="220.0" style="-fx-font-size: 12px;" />

                <!-- Botón SOLICITAR -->
                <Button fx:id="solicitarBtn" prefWidth="180.0" style="-fx-background-color: #d32f2f; -fx-text-fill: white; -fx-font-size: 14px;" text="SOLICITAR" translateY="35.0" />
            </VBox>
        </HBox>
    </center>
</BorderPane>
