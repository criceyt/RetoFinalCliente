<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.beans.property.SimpleStringProperty?>
<?import javafx.beans.property.SimpleBooleanProperty?>
<?import javafx.beans.property.SimpleObjectProperty?>
<?import java.time.LocalDate?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controladores.TablaMantenimientoController">
    <!-- Barra Superior -->
    <top>
        <HBox alignment="CENTER" spacing="20" style="-fx-background-color: #5b1e1e; -fx-padding: 10;">
            <Button fx:id="homeBtn" style="-fx-text-fill: white; -fx-font-weight: bold;" text="HOME" />
            <Button fx:id="solicitarMantenimientoBtn" style="-fx-text-fill: white; -fx-font-weight: bold;" text="SOLICITAR MANTENIMIENTO" />
            <MenuButton text="Gestionar" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-background-color: #d32f2f;">
                <items>
                    <MenuItem fx:id="gestionVehiculos" text="Gestión de Vehículos"/>
                    <MenuItem fx:id="gestionProveedores" text="Gestión de Proveedores"/>
                    <MenuItem fx:id="gestionMantenimientos" text="Gestión de Mantenimientos"/>
                </items>
            </MenuButton>
            <Button fx:id="cerrarSesionBtn" style="-fx-text-fill: white; -fx-font-weight: bold;" text="CERRAR SESIÓN" />
        </HBox>
    </top>

    <!-- Contenido Principal (Tabla a la izquierda y formulario a la derecha) -->
    <center>
        <HBox>
            <!-- VBox para organizar la tabla dentro del área central -->
            <VBox spacing="10" style="-fx-padding: 10;" prefWidth="550">
                <TableView fx:id="tableView" prefWidth="500" styleClass="table-view">
                    <columns>
                        <!-- Columna "X" -->
                        <TableColumn fx:id="indexColumn" text="X" prefWidth="50"/>
                        <!-- Otras columnas -->
                        <TableColumn fx:id="idMantenimientoColumn" text="idMantenimiento" />
                        <TableColumn fx:id="dni" text="DNI" />
                        <TableColumn fx:id="nombreColumn" text="Nombre" />
                        <TableColumn fx:id="descripcion" text="Descripcion" />
                        <TableColumn fx:id="matricula" text="Matricula" />
                        <TableColumn fx:id="marca" text="Marca" />
                        <TableColumn fx:id="modelo" text="Modelo" />
                        <TableColumn fx:id="mantenimientoExitoso" text="Mantenimiento Exitoso" />
                        <TableColumn fx:id="fechaFinalizacion" text="Fecha Finalizacion" />
                    </columns>
                </TableView>

                <!-- Botones debajo de la tabla -->
                <HBox alignment="CENTER" spacing="20" style="-fx-padding: 10;">
                    <Button fx:id="refreshBtn" text="Refresh" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
                    <Button fx:id="deleteBtn" text="Delete" style="-fx-background-color: #F44336; -fx-text-fill: white;"/>
                    <Button fx:id="saveBtn" text="Guardar" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                </HBox>
            </VBox>

            <!-- Mover el formulario entero hacia la derecha -->
            <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #f0f0f0; -fx-border-color: #d32f2f; -fx-border-width: 2; -fx-background-radius: 10;" prefWidth="400" maxWidth="400">
                <!-- Título encima del formulario -->
                <Label text="Alta de Proveedor" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #d32f2f; -fx-padding: 10;"/>

                <!-- Campos del formulario -->
                <Label text="DNI"/>
                <TextField fx:id="dniField" prefWidth="250"/>

                <Label text="Descripcion"/>
                <TextField fx:id="descripcionField" prefWidth="250"/>
                
                <Label text="Matricula"/>
                <TextField fx:id="matriculaField" prefWidth="250"/>
                
                <Label text="Marca"/>
                <TextField fx:id="marcaField" prefWidth="250"/>

                <Label text="Modelo"/>
                <TextField fx:id="modeloField" prefWidth="250"/>
                
                <Label text="Fecha De Finalizacion"/>
                <DatePicker fx:id="datePickerFiltro" styleClass="date-picker"/>
                
                <!-- Botón para insertar -->
                <HBox alignment="CENTER_RIGHT" style="-fx-padding: 10;">
                    <Button fx:id="submitButton" text="Insertar" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
                </HBox>
            </VBox>
        </HBox>
    </center>
</BorderPane>
