<?xml version="1.0" encoding="UTF-8"?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>
<?import javafx.collections.ObservableList?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.image.Image?>
<BorderPane id="mainBackground" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controladores.TablaProveedoresController" >
    <top>
        <HBox alignment="CENTER" spacing="20" style="-fx-background-color: #5b1e1e; -fx-padding: 10;">
            <!-- Imagen en la barra superior -->
            <ImageView fx:id="abrirPerfilBtn" fitHeight="80" fitWidth="80" preserveRatio="true" onMouseClicked="#abrirPerfilBtn">
                <image>
                    <Image url="@/img/avatar.png" />
                </image>
            </ImageView>
            <Button fx:id="homeBtn" style="-fx-text-fill: white; -fx-font-weight: bold;" text="HOME" />
            <Button fx:id="solicitarMantenimientoBtn" style="-fx-text-fill: white; -fx-font-weight: bold;" text="SOLICITAR MANTENIMIENTO" />
            <MenuButton text="Gestionar" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-background-color: #d32f2f;">
                <items>
                    <MenuItem fx:id="gestionVehiculos" text="Gestión de Vehículos"/>
                    <MenuItem fx:id="gestionProveedores" text="Gestión de Proveedores"/>
                    <MenuItem fx:id="gestionMantenimientos" text="Gestión de Mantenimientos"/>
                </items>
            </MenuButton>
            <Button fx:id="cerrarSesionBtn" style="-fx-text-fill: white; -fx-font-weight: bold;" text="CERRAR SESIÓN" />
        </HBox>
    </top>
    
    <center>
        <SplitPane orientation="HORIZONTAL">
            <TableView fx:id="tableView" prefWidth="350" styleClass="table-view">
                <columns>
                    <!-- Columna "X" -->
                    <TableColumn fx:id="indexColumn" text="X" prefWidth="50"/>
                    <!-- Otras columnas -->
                    <TableColumn fx:id="idProveedorColumn" text="idProveedor" />
                    <TableColumn fx:id="nombreColumn" text="Nombre" />
                    <TableColumn fx:id="tipoColumn" text="Tipo" />
                    <TableColumn fx:id="especialidadColumn" text="Especialidad" />
                    <TableColumn fx:id="ultimaActividadColumn" text="Última Actividad" />
                </columns>
            </TableView>

            <VBox spacing="10" alignment="CENTER" styleClass="form-pane">
                <Label text="Alta de Proveedor" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #d32f2f; -fx-padding: 10;"/>
                <Label text="Nombre" styleClass="label"/>
                <TextField fx:id="Nombre"/> 
                <Label text="Especialidad" styleClass="label"/>
                <TextField fx:id="especialidadField"/> 
                <Label text="Tipo" styleClass="label" />
                <ComboBox fx:id="categoryComboBox">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Opción 1" />
                            <String fx:value="Opción 2" />
                            <String fx:value="Opción 3" />
                        </FXCollections>
                    </items>
                </ComboBox>


            </VBox>
        </SplitPane>
    </center>
    <bottom>
        <HBox>
            <Button text="DELETE" fx:id="deleteButton"/>
            <Button text="REFRESH" fx:id="refreshButton"/>
     
            <HBox alignment="CENTER" spacing="20" style="-fx-padding: 10;">
                <Label text="Filtrar por fecha:" styleClass="label"/>
                <DatePicker fx:id="datePickerFiltro" styleClass="date-picker"/>
                <Button fx:id="saveBtn" text="Guardar" styleClass="button"/>
            </HBox>

            <Button text="PRINT" fx:id="printButton"/>
        </HBox>
    </bottom>
</BorderPane>
