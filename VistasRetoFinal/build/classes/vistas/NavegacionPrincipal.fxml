<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controladores.NavegacionPrincipalController">
    <!-- Barra Superior -->
    <top>
        <HBox alignment="CENTER" spacing="20" style="-fx-background-color: #5b1e1e; -fx-padding: 10;">
            <Button fx:id="homeBtn" style="-fx-text-fill: white; -fx-font-weight: bold;" text="HOME" />
            <Button fx:id="solicitarMantenimientoBtn" style="-fx-text-fill: white; -fx-font-weight: bold;" text="SOLICITAR MANTENIMIENTO" />
             <MenuButton text="Gestionar" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-background-color: #d32f2f;">
                <items>
                    <MenuItem fx:id="gestionVehiculos" text="Gestión de Vehículos"/>
                    <MenuItem fx:id="gestionProveedores" text="Gestión de Proveedores"/>
                    <MenuItem fx:id="gestionMantenimientos" text="Gestión de Mantenimientos"/>
                </items>
            </MenuButton>
            <Button fx:id="cerrarSesionBtn" style="-fx-text-fill: white; -fx-font-weight: bold;" text="CERRAR SESIÓN" />
        </HBox>
    </top>

    <!-- Panel Izquierdo -->
    <left>
        <VBox spacing="10" style="-fx-background-color: #2e1a1a; -fx-padding: 20; -fx-border-color: #004fff; -fx-border-width: 2; -fx-border-radius: 5;">
            <ImageView fitHeight="50" fitWidth="50">
                <image>
                    
                </image>
            </ImageView> 

            <Button prefWidth="150" text="Opción 1" />
            <Button prefWidth="150" text="Opción 2" />
            <Button prefWidth="150" text="Opción 3" />
            <Button prefWidth="150" text="Opción 4" />
            <Button prefWidth="150" text="Opción 5" />
            <Button prefWidth="150" text="Opción 6" />
        </VBox>
    </left>

    <!-- Área Central -->
    <center>
        <VBox spacing="10" style="-fx-padding: 20;">
            <!-- Barra de búsqueda -->
            <TextField promptText="Buscar..." style="-fx-background-color: #fff; -fx-border-color: #888;" />
            <!-- Grid de elementos -->
            <GridPane hgap="20" vgap="20">
                <children>
                    <!-- Genera botones en la grilla -->
                    <Button prefHeight="80" prefWidth="100" text="" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <Button prefHeight="80" prefWidth="100" text="" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                    <Button prefHeight="80" prefWidth="100" text="" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                    <Button prefHeight="80" prefWidth="100" text="" GridPane.columnIndex="3" GridPane.rowIndex="0" />
                    <Button prefHeight="80" prefWidth="100" text="" GridPane.columnIndex="4" GridPane.rowIndex="0" />
                    <Button prefHeight="80" prefWidth="100" text="" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <Button prefHeight="80" prefWidth="100" text="" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    <Button prefHeight="80" prefWidth="100" text="" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                    <Button prefHeight="80" prefWidth="100" text="" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                </children>
            <columnConstraints>
               <ColumnConstraints />
               <ColumnConstraints />
               <ColumnConstraints />
               <ColumnConstraints />
               <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
            </GridPane>
        </VBox>
    </center>
</BorderPane>
